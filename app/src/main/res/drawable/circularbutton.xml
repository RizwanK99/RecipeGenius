<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:shape="oval">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/rg_red_2"/>
            <stroke android:width="1dp" android:color="@color/rg_red_1" />
            <corners android:radius="500dp"/>
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <solid android:color="@color/rg_red_1"/>
            <stroke android:width="1dp" android:color="@color/rg_red_1" />
            <corners android:radius="500dp"/>
        </shape>
    </item>

</selector>