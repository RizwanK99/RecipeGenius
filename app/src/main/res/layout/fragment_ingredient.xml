<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ingredient_card"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginTop="10dp"
    android:background="@color/rg_blue_1"
    tools:context=".ui.ingredient.IngredientFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C0DAE6"
        app:cardBackgroundColor="@color/rg_blue_1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ing_name"
                    android:layout_width="230dp"
                    android:layout_height="83dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textSize="34sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/ing_amount"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:textAlignment="textEnd"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/ing_unit"
                    android:layout_width="200dp"
                    android:layout_height="87dp"
                    android:layout_weight="1"
                    android:text="TextView"
                    android:textSize="24sp" />

            </LinearLayout>

            <Button
                android:id="@+id/edit_button"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:layout_marginLeft="280dp"
                android:layout_marginRight="50dp"
                android:layout_weight="1"
                android:text="EDIT"
                android:textAlignment="center" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>